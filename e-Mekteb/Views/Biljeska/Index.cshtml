@model IEnumerable<e_Mekteb.Models.Biljeska>

@{
    ViewData["Title"] = "Index";
}

<h1>Bilješke</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AplicationUserId)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AplicationUser.Email)
            </td>


            <td>
                <a asp-action="Edit" asp-route-id="@item.BiljeskaId" class="btn btn-primary">Uredi</a>
                <a asp-action="Details" asp-route-id="@item.BiljeskaId" class="btn btn-primary">Detalji</a>
                <a asp-action="Delete" asp-route-id="@item.BiljeskaId" class="btn btn-danger">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
