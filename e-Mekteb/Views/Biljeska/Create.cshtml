@model e_Mekteb.Models.Biljeska

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiraj Novu</h1>

<h4>Bilješku</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datum" class="control-label"></label>
                <input asp-for="Datum" class="form-control" />
                <span asp-validation-for="Datum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AplicationUserId" class="control-label"></label>
                <select asp-for="AplicationUserId" class="form-control" asp-items="ViewBag.AplicationUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AktivnostId" class="control-label"></label>
                <select asp-for="AktivnostId" class ="form-control" asp-items="ViewBag.AktivnostId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Biljeske" class="control-label"></label>
                <textarea asp-for="Biljeske" class="form-control"></textarea>
                <span asp-validation-for="Biljeske" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><<</a>
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
