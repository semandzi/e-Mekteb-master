@model e_Mekteb.Models.Administration.EditUser;
@{ 
    ViewBag.Title = "Edit User";
}
<h1>Uredi Korisnika</h1>

<form method="post" class="mt-1 mb-5">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2">Korisnik Id</label>

        <input asp-for="Id" disabled class="form-group col-sm-5">


    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2">Korisničko ime</label>

        <input asp-for="UserName" class="form-group col-sm-5">


        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2">Email</label>

        <input asp-for="Email" class="form-group col-sm-5">


        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">

            <a asp-controller="Administration" asp-action="ListUsers" class="btn btn-primary"><<</a>
            <button type="submit" class="btn btn-primary">Ažuriraj</button>

        </div>

    </div>
    <div class="card">
        <div class="card-header">
            Role Korisnika
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">
                        @role
                    </h5>
                }
            }
            else
            {
                <h5 class="card-title">
                    Trenutačno ih nema.
                </h5>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary">Uredi Role</a>


        </div>
    </div>

    <div class="card">
        <div class="card-header">
            Korisnička Odobrenja
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">
                        @claim
                    </h5>
                }
            }
            else
            {
                <h5 class="card-title">
                    Trenutačno ih nema.
                </h5>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="ManageUserClaims" asp-route-userId="@Model.Id" class="btn btn-primary">Uredi Odobrenja</a>


        </div>
    </div>
    <div class="card">
        <div class="card-header">
            Predmeti Vjeroučitelja
        </div>
        <div class="card-body">
            @if (Model.Predmeti.Any())
            {
                foreach (var predmet in Model.Predmeti)
                {
                    <h5 class="card-title">
                        @predmet
                    </h5>
                }
            }
            else
            {
                <h5 class="card-title">
                    Trenutačno ih nema.
                </h5>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="PredmetiVjeroucitelja" asp-route-userId="@Model.Id" class="btn btn-primary">Uredi Predmete</a>


        </div>
    </div>

</form>