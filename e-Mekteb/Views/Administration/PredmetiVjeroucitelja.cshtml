
@model List<e_Mekteb.ViewModel.TeacherActivity>
@{
    var userId = ViewBag.userId;
   
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Uredi Predmete</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
            <div class="form-check mt-1">
                <input type="hidden" asp-for="@Model[i].AktivnostId" class="form-check-input">
                <input type="hidden" asp-for="@Model[i].VjerouciteljId" class="form-check-input">

                <input asp-for="@Model[i].IsSelected" class="form-check-input">
                <label class="form-check-label">@Model[i].NazivPredmeta</label>
            </div>
            
            }
            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary"><<</a>
            <input type="submit" value="Ažuriraj"class="btn btn-primary" asp-for-userId="@userId">

        </div>
    </div>
</form>
