@model List<e_Mekteb.Models.Administration.UserRole>
@{
    var roleId = ViewBag.roleId;
    
}
    <link rel="stylesheet" href="~/css/site.css"/>

   

<form  method="post" >
       <div class="card mb-5">
        <div class="card-header">
            <h2>Dodaj ili Ukloni Korisnika iz Ove Role</h2>
            <input id="myInput" type="text" placeholder="Pretraži..">

        </div>
        <div class="card-body" id="myDIV">

            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check mt-1">
                    <input type="hidden" asp-for="@Model[i].UserId" class="form-check-input">
                    <input type="hidden" asp-for="@Model[i].ImeIPrezime" class="form-check-input">
                    <input id="mycheckbox" asp-for="@Model[i].IsSelected" class="form-check-input">
                    <label class="form-check-label">@Model[i].ImeIPrezime</label>

                </div>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary"><<</a>
            <button type="submit" class="btn btn-primary">Ažuriraj</button>


        </div>
    </div>
    
    
</form>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript" src="~/js/site.js"></script>


