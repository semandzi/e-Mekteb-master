@model IEnumerable<AplicationUser>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <h5 class="card-title">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Add new user</a>    </h5>
    @foreach (var user in Model)
    {
        <div class="card">
            <div class="card-header">
                User Id:@user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @user.UserName;
                </h5>
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="get">
                    <a class="btn btn-primary" asp-controller="Administration" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    <button type="submit"  class="btn btn-danger" >Delete</button>
                </form>

            </div>
        </div>
    }

}
else
{
    <div class="card">
        <div class="card-header">
            No user created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use button below to create new user
            </h5>
            <h5 class="card-title">
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Add new user</a>
            </h5>

        </div>
    </div>
}

