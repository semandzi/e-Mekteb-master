@model EditRole
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Uredi Rolu</h1>



<form method="post"  >
    <div class="form-group row" >
        <label asp-for="Id" class="col-sm-2">Role Id</label>
       
            <input asp-for="Id" disabled class="form-group col-sm-5">

        
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2">Naziv Role</label>
        
            <input asp-for="RoleName" class="form-group col-sm-5" >

       
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">

            <a asp-controller="Administration" asp-action="ListRole" class="btn btn-primary"><<</a>
            <button type="submit" class="btn btn-primary">Ažuriraj</button>

        </div>

    </div>
    <div class="mb-5">
        <div class="card-header">
          Korisnici u ovoj roli
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">
                        @user
                    </h5>
                }
            }
            else
            {
            <h5 class="card-title">
            Nema korisnika u ovoj roli
             </h5>
            }

           
        </div>
        <div class="card-footer">
            <a  asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">Dodaj ili Ukloni Korisnika</a>


        </div>
    </div>

</form>