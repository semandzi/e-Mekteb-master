@using Microsoft.AspNetCore.Identity


@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>Administracija Rola</h1>
 <a
    asp-action ="CreateRole" asp-controller="Administration" class="btn btn-primary">
    Dodaj Rolu
 </a><br /><br />
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card mt-1 mb-5">
            <div class="card-header">
                Role Id:@role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
                <a asp-controller="Administration"asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Uredi</a>
                <a asp-controller="Administration"asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Obriši</a>
            </div>
        </div>
    }



}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button bellow to create new role</h5>
            <a asp-action ="CreateRole" asp-controller="Administration" class="btn btn-primary">Dodaj Rolu</a>
        </div>
    </div>
}



