@using Microsoft.AspNetCore.Identity


@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "All Roles";
}
<h1>All Roles</h1>
 <a
    asp-action ="CreateRole" asp-controller="Administration" class="btn btn-primary">
    Add Role
 </a><br /><br />
@if (Model.Any())
{
    foreach (var role in Model)
    {
        <div class="card">
            <div class="card-header">
                Role Id:@role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    @role.Name
                </h5>
                <a asp-controller="Administration"asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
    }



}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button bellow to create new role</h5>
            <a asp-action ="CreateRole" asp-controller="Administration" class="btn btn-primary">Create</a>
        </div>
    </div>
}



