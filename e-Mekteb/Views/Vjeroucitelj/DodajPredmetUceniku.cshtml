@model List<e_Mekteb.ViewModel.AktivnostiUcenika>
@{
    var userId = ViewBag.userId;


}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Dodaj ili Ukloni Predmet</h2>
        </div>
        <div class="card-body">

            @if (Model.Any())
            {
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="form-check mt-1">
                        <input type="hidden" asp-for="@Model[i].UcenikId" class="form-check-input">
                        <input type="hidden" asp-for="@Model[i].AktivnostId" class="form-check-input">
                        <input type="hidden" asp-for="@Model[i].NazivPredmeta" class="form-check-input">
                        <input type="hidden" asp-for="@Model[i].VjerouciteljId" class="form-check-input">




                        <input asp-for="@Model[i].IsSelected" class="form-check-input">
                        <label class="form-check-label">@Model[i].NazivPredmeta </label>










                    </div>


                }
            }
            else
            {
                <h5>
                    Trenutacno ne možete dodati predmet učeniku zbog mogućih razloga:<br />
                </h5>
                <p>
                    -Administrator Vam nije dodao predmete.<br />
                    -Možda predmet koji predajete mu je već dodan od strane drugog vjeroučitelja.
                </p>
                   
                




                }


                <div class="card-footer">
                    <a asp-controller="Vjeroucitelj" asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary"><<</a>
                    <button type="submit" class="btn btn-primary" asp-route-id="@userId">Ažuriraj</button>

                </div>


            </div>

    </div>
</form>