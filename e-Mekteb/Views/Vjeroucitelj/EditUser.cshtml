@model e_Mekteb.Models.Administration.EditUser;
@{ 
    ViewBag.Title = "Edit User";
}
<h1>Edit User</h1>

<form method="post" class="mt-1 mb-5">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2">User Id</label>

        <input asp-for="Id" disabled class="form-group col-sm-5">


    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2">User Name</label>

        <input asp-for="UserName" class="form-group col-sm-5">


        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2">Email</label>

        <input asp-for="Email" class="form-group col-sm-5">


        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">

            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Vjeroucitelj" asp-action="ListUsers" class="btn btn-primary">Cancel</a>

        </div>

    </div>
    <div class="card">
        <div class="card-header">
            User Role
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {


            <h5 class="card-title">
                @if (role == "Ucenik")
                {
                    @role

                }
            </h5>
                }
            }
            else
            {
                <h5 class="card-title">
                    No at the moment
                </h5>
            }


        </div>
        <div class="card-footer">
            <a asp-controller="Vjeroucitelj" asp-action="ManageUserRoles" asp-route-userId="@Model.Id" class="btn btn-primary">Manage Roles</a>


        </div>
    </div>

   

</form>