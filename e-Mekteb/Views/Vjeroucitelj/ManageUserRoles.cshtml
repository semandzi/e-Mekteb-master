
@model List<e_Mekteb.Models.Administration.UserRoles>
@{
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check mt-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" class="form-check-input">
                    <input type="hidden" asp-for="@Model[i].RoleName" class="form-check-input">

                    <input asp-for="@Model[i].IsSelected" class="form-check-input">
                    <label class="form-check-label">@Model[i].RoleName</label>

                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Vjeroucitelj" asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>

        </div>
    </div>
</form>
