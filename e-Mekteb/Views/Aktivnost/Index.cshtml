@model IEnumerable<e_Mekteb.Models.Aktivnost>

@{
    ViewData["Title"] = "Index";
}

<h1>Nastavne Aktivnosti</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj Novu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SkolskaGodina)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipAktivnosti)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SkolskaGodina.Godina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipAktivnosti)
                </td>
                <td>
                    @await Html.PartialAsync("TableButtonPartial",item.AktivnostId)

                    
                </td>
            </tr>
        }
    </tbody>
</table>

