@model e_Mekteb.Models.Aktivnost

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj Novu</h1>

<h4>Aktivnost</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SkolskaGodinaId" class="control-label"></label>
                <select asp-for="SkolskaGodinaId" class ="form-control" asp-items="ViewBag.SkolskaGodinaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipAktivnosti" class="control-label"></label>
                <select asp-for="TipAktivnosti" class="form-control" asp-items="ViewBag.AktivnostId"></select>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary"><<</a>
                <input type="submit" value="Spremi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
