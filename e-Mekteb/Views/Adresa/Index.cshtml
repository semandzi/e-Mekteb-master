@model IEnumerable<e_Mekteb.Models.Adresa>

@{
    ViewData["Title"] = "Index";
}

<h1>Adrese</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj Novu</a>
</p>
<table class="table table-responsive-sm">
    <thead class="table table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NazivMjesta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ulica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostanskiBroj)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table table-bordered">
@foreach (var item in Model) {
        <tr class="table">
            <td style="width:25%">
                @Html.DisplayFor(modelItem => item.NazivMjesta)
            </td>
            <td style="width:25%">
                @Html.DisplayFor(modelItem => item.Ulica)
            </td>
            <td style="width:25%">
                @Html.DisplayFor(modelItem => item.PostanskiBroj)
            </td>
            <td style="width:25%" align="right">
                @await Html.PartialAsync("TableButtonPartial", item.AdresaId)
               
            </td>
        </tr>
}
    </tbody>
</table>
