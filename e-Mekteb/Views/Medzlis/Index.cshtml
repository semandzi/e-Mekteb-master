@model IEnumerable<e_Mekteb.Models.Medzlis>

@{
    ViewData["Title"] = "Index";
}

<h1>Medžlisi</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj Novi</a>
</p>
<table class="table table-responsive-sm">
    <thead class="table table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kontakt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GlavniImam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailGlavnogImama)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="table table-bordered">
@foreach (var item in Model) {
        <tr class="table">
            <td style="width:18%">
                @Html.DisplayFor(modelItem => item.Adresa.NazivMjesta)
            </td>
            <td style="width:18%">
                @Html.DisplayFor(modelItem => item.Naziv)
            </td>
            <td style="width:18%">
                @Html.DisplayFor(modelItem => item.Kontakt)
            </td>
            <td style="width:18%">
                @Html.DisplayFor(modelItem => item.GlavniImam)
            </td>
            <td style="width:18%">
                @Html.DisplayFor(modelItem => item.EmailGlavnogImama)
            </td>
            <td style="width:10%" align="right">
                @await Html.PartialAsync("TableButtonPartial", item.MedzlisId)
            </td>
        </tr>
}
    </tbody>
</table>
