@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@
<h1 class="text-center text-secondary text-decoration-underline">e-Mekteb</h1>
<h1 class="text-center text-secondary">Registracija novog korisnika</h1>
<div class="text-center text-danger">@ViewData["Error"]</div>

<div class="row justify-content-center mt-5">

    <div class="col-md-4 border border-3 border rounded shadow-lg p-3 mb-5 bg-body rounded">
        <section>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-secondary text-center">Izradi novi račun</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.ImeiPrezime"></label>
                    <input asp-for="Input.ImeiPrezime" placeholder="Ime i Prezime" class="form-control" />
                    <span asp-validation-for="Input.ImeiPrezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" placeholder="ime.prezime@gmail.com" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Mjesto"></label>
                    <input asp-for="Input.Mjesto" class="form-control" placeholder="npr.Zagreb" />
                    <span asp-validation-for="Input.Mjesto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 col-6 mx-auto">
                    <button type="submit" class="btn btn-outline-danger">Registracija</button>

                </div>
            </form>
        </section>
    </div>

</div>

